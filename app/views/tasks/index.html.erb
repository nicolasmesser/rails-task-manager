<h2>All Tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <%= link_to task.title, task_path(task) %>
        <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete " + task.title + "?"} %>
      </li>
  <% end %>
</ul>
<i class="fa-solid fa-plus"></i> <%= link_to "Add a new task", new_task_url %>
